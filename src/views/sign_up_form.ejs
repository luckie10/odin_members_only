<html>
  <form method="POST">
    <div>
      <label for="firstName">First Name:</label>
      <input type="text" name="firstName" value="<%= locals.user ? user.firstName : '' %>" required />
    </div>
    <div>
      <label for="lastName">Last Name:</label>
      <input type="text" name="lastName" value="<%= locals.user ? user.lastName : '' %>" required />
    </div>
    <div>
      <label for="username">Username:</label>
      <input type="text" name="username" value="<%= locals.user ? user.username : '' %>"  />
    </div>
    <div>
      <label for="password">Password:</label>
      <input type="password" name="password" value="" />
    </div>
    <div>
      <label for="confirm_password">Confirm Password:</label>
      <input type="password" name="confirm_password" value="" />
    </div>
    <div>
      <button type="submit">Sign Up!</button>
    </div>
  </form>
  <p>
  <% if (locals.errors) { %>
    <% errors.map((err) => { %>
      <%= err.msg %>
    <% }) %>
  <% } %>
  </p>
</html>
